<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.EditUserDialogController">
    <children>
        <Label text="Edit User" layoutX="10.0" layoutY="10.0" />
        <Label text="Name:" layoutX="10.0" layoutY="50.0" />
        <TextField fx:id="nameField" layoutX="70.0" layoutY="50.0" />

        <Label text="Date of Birth:" layoutX="10.0" layoutY="90.0" />
        <TextField fx:id="dobField" layoutX="100.0" layoutY="90.0" />

        <Label text="Email:" layoutX="10.0" layoutY="130.0" />
        <TextField fx:id="emailField" layoutX="70.0" layoutY="130.0" />

        <Button text="Save" layoutX="50.0" layoutY="180.0" onAction="#handleSave" />
        <Button text="Cancel" layoutX="120.0" layoutY="180.0" onAction="#handleCancel" />
    </children>
</AnchorPane>

