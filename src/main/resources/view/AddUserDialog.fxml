<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddUserDialogController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Name:" />
        <TextField fx:id="nameField" layoutX="80.0" layoutY="20.0" prefWidth="200.0" />

        <Label layoutX="20.0" layoutY="60.0" text="Date of Birth:" />
        <TextField fx:id="dobField" layoutX="80.0" layoutY="60.0" prefWidth="200.0" />

        <Label layoutX="20.0" layoutY="100.0" text="Email:" />
        <TextField fx:id="emailField" layoutX="80.0" layoutY="100.0" prefWidth="200.0" />

        <Button layoutX="80.0" layoutY="150.0" text="Save" onAction="#handleSave" />
        <Button layoutX="160.0" layoutY="150.0" text="Cancel" onAction="#handleCancel" />
    </children>
</AnchorPane>
